{
  "name": "cheese-and-wine-store",
  "version": "0.0.1",
  "description": "",
  "author": "BallistiX",
  "license": "",
  "scripts": {
    "autobuild": "nodemon -e ts --watch src --exec npm run build",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "cross-env TZ=UTC nest start",
    "start:dev": "cross-env TZ=UTC nest start --watch",
    "start:debug": "cross-env TZ=UTC nest start --debug",
    "start:prod": "cross-env TZ=UTC node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=--max_old_space_size=4096 TZ=UTC node --expose-gc ./node_modules/jest/bin/jest --runInBand --forceExit --testTimeout=1000000 --workerIdleMemoryLimit=2048MB --logHeapUsage",
    "test:cov": "cross-env NODE_ENV=test NODE_OPTIONS=--max_old_space_size=4096 TZ=UTC jest --runInBand --forceExit --coverage",
    "test:watch": "cross-env NODE_ENV=test NODE_OPTIONS=--max_old_space_size=4096 TZ=UTC jest --watch",
    "test:debug": "cross-env NODE_ENV=test NODE_OPTIONS=--max_old_space_size=4096 TZ=UTC node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --testTimeout=1000000",
    "test:snapshots:update": "cross-env NODE_ENV=test NODE_OPTIONS=--max_old_space_size=4096 TZ=UTC node --expose-gc ./node_modules/.bin/jest --runInBand --forceExit --testTimeout=1000000 -u --logHeapUsage"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.17",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.17",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/platform-express": "^11.0.17",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/swagger": "^11.1.3",
    "@nestjs/terminus": "^11.0.0",
    "axios": "^1.7.9",
    "body-parser": "^1.20.3",
    "compression": "^1.7.5",
    "cross-env": "^7.0.3",
    "lodash": "^4.17.21",
    "nest-winston": "^1.10.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.10",
    "rxjs": "^7.8.2",
    "winston": "^3.17.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.6",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.0.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.13.9",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.6",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/module/**/*.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "src",
      "test"
    ],
    "testSequencer": "./testSequencer.js",
    "testTimeout": 1000000,
    "testRegex": ".+(-spec)\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
